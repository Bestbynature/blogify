<%= form_with(model: @post, url: posts_path, method: :post) do |form| %>
  
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_area :text %>
  </div>

  <%# if @post.persisted? %>
    <%#= form.hidden_field :author_id, value: @user.id %>
  <%# end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>

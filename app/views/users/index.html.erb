<p style="color: green"><%= notice %></p>

<%= link_to "Add a New user", new_user_path %>
<h1>Users</h1>

<div id="users">
<% @users.each do |user| %>
  <div class="user" id="user-<%= user.id %>">
    <%= image_tag user.photo, alt: "User Photo", class: "user-photo", title: "User Photo" %>

    <div class="user-info">
      <h3><%= user.name %></h3>
      <p>Number of Posts: <%= user.posts.count %></p>
      <p>
        <%= link_to "Show this user", user_path(user) %>
      </p>
    </div>
  </div>
<% end %>
</div>


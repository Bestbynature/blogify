<p style="color: green"><%= notice %></p>

<h1>User Details</h1>
<p><strong>Name:</strong> <%= @user.name %></p>
<p><strong>Photo:</strong> <%= @user.photo %></p>

<p><strong>Number of posts:</strong> <%= @user.posts.count %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", user_post_path(@user, post) %>
    </p>
    <h2>Comments</h2>
    <% post.comments.each do |comment| %>
      <%= render comment %>
    <% end %>
    <%= link_to "New comment", new_user_post_comment_path(@user, post) %>
  <% end %>
</div>

<%= link_to "New post", new_user_post_path(@user) %>

<%= form_with(model: [@post.author, @post, @comment], url: @comment.new_record? ? user_post_comments_path(@post.author, @post) : user_post_comment_path(@post.author, @post, @comment), method: @comment.new_record? ? :post : :patch) do |form| %>
  <% if @comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, style: "display: block" %>
